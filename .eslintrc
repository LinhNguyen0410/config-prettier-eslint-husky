{
    "env": {
        "node": true,
        "es6": true
    },
    "extends": ["react-app","prettier"],
    "plugins": ["react", "prettier"],
    "parser":  "@babel/eslint-parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "requireConfigFile": false,
        "sourceType": "module",
        "allowImportExportEverywhere": true
    },
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "printWidth": 80,
                "trailingComma": "all",
                "semi": false,
                "jsxSingleQuote": true,
                "singleQuote": true,
                "useTabs": true,
                "tabWidth": 2
            }
        ]
    }
}
